@model IEnumerable<ChemicalMVCDatabase.Models.Chemical>

@{
  ViewData["Title"] = "Index";
}

<p>
  <a asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Chemical_Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Molecular_Weight)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Product_Number)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Vendor)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
{
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.Chemical_Name)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Molecular_Weight)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Product_Number)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Vendor)
          </td>
          <td>
            <a asp-action="Edit" asp-route-id="@item.Chemical_ID">Edit</a>
            <a asp-action="Details" asp-route-id="@item.Chemical_ID">Details</a>
            <a asp-action="Delete" asp-route-id="@item.Chemical_ID">Delete</a>
          </td>
        </tr>
      }
  </tbody>
</table>